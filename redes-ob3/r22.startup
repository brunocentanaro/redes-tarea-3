ifconfig eth1 up

#trunk en 1
vconfig add eth1 100   # Agrega VLAN 100 al puerto 1
vconfig add eth1 200   # Agrega VLAN 200 al puerto 1
ifconfig eth1.100 up   # Activa interface pto1.vlan100
ifconfig eth1.200 up   # Activa interface pto1.vlan200


brctl addbr br100       # Crea bridge br100 (asociado a VLAN 100)
brctl addbr br200       # Crea bridge br200 (asociado a VLAN 200)

#agrego interfaces virtuales a los bridges
brctl addif br100 eth1.100
brctl addif br200 eth1.200

brctl stp br100 on      # Activa el STP en el bridge br100
ifconfig br100 up       # Activa bridge br100

brctl stp br200 on      # Activa el STP en el bridge br200
ifconfig br200 up       # Activa bridge br200




