ifconfig eth1:100 172.21.1.1 netmask 255.255.255.0 broadcast 172.21.1.255
ifconfig eth1:200 172.21.2.1 netmask 255.255.255.0 broadcast 172.21.2.255

route add default gw 192.168.254.1 dev eth0
